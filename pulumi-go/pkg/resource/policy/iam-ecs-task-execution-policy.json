{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect":"Allow",
      "Action": "s3:ListAllMyBuckets",
      "Resource":"arn:aws:s3:::*"
    },
    {
      "Effect":"Allow",
      "Action":[
        "s3:ListBucket",
        "s3:GetBucketLocation"
      ],
      "Resource":"*"
    },
    {
      "Effect":"Allow",
      "Action": [
        "s3:PutObject",
        "s3:PutObjectAcl",
        "s3:GetObject",
        "s3:GetObjectAcl",
        "s3:*"    // TODO:削除
      ],
      "Resource":"*"
    },
    {
      "Effect":"Allow",
      "Action": [
        "logs:CreateLogStream",
        "logs:Get*",
        "logs:Describe*",
        "logs:PutLogEvents"
      ],
      "Resource":"*"
    },
    {
      "Effect": "Allow",
      "Action": "sts:AssumeRole",
      "Resource": "arn:aws:iam::365956602651:role/NudgeFluentbitRole" //TODO: 削除
    }
  ]
}